@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace EduChat.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="EduChat.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="educhat.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD7lpVLYqJklPU-g0g3uIUAPgda_2djq6s" async defer></script>

    <script src="_content/BlazorGoogleMaps/js/objectManager.js"></script>

    <link href="_content/Blazorise/blazorise.min.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.min.css" rel="stylesheet" />
    <link href="_content/Blazorise.Icons.FontAwesome/blazorise.fontawesome.min.css" rel="stylesheet" />

    <!-- Add the following line just before the closing </body> tag -->
    <script src="_content/Blazorise/blazorise.min.js"></script>


</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="fileSaver.js"></script>
    <script>
        function changeTheme(theme) {
            if (theme === "dark-theme") {
                document.body.classList.add("dark-theme");
            } else {
                document.body.classList.remove("dark-theme");
            }
        }
    </script>




</body>
</html>
